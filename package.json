{
  "name": "n8n-nodes-whatsapp-pro",
  "version": "2.1.0",
  "description": "Advanced WhatsApp Business API node for n8n with interactive messages, buttons, lists, catalogs and flows",
  "keywords": [
    "n8n-community-node-package",
    "whatsapp",
    "whatsapp-business",
    "whatsapp-api",
    "interactive-messages",
    "buttons",
    "list-messages",
    "catalog",
    "whatsapp-flows",
    "contact-cards"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Manuelreyesbravo/n8n-nodes-whatsapp-pro",
  "author": {
    "name": "LatamFlows",
    "email": "manuelreyesbravo@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Manuelreyesbravo/n8n-nodes-whatsapp-pro.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier --write .",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build && npm run test"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/WhatsAppProApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/WhatsAppPro/WhatsAppPro.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.20.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
